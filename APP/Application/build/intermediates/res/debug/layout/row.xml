<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/place_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/appwidget_bg"
    android:padding="5dip">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgViewLogo"
            android:scaleType="center"
            android:layout_alignRight="@android:id/text1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/position_name" />



        <TextView
            android:id="@+id/position_name"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="position name"
            android:ellipsize="end"
            android:lines="1"
            android:layout_alignLeft="@+id/distance"
            android:layout_alignStart="@+id/distance"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/imgViewLogo"
            android:layout_toStartOf="@+id/imgViewLogo" />

        <TextView
            android:id="@+id/distance"
            android:textSize="15sp"
            android:textColor="#BBB"
            android:text="距離50公尺"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/review"
            android:layout_toLeftOf="@+id/imgViewLogo"
            android:layout_toStartOf="@+id/imgViewLogo" />

    <TextView
        android:id="@+id/review"
        android:textSize="15sp"
        android:textColor="#BBB"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/position_name"
        android:layout_toLeftOf="@+id/imgViewLogo" />

    <TextView
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textColor="#BBB"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/review"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
